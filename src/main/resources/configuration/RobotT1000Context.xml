<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"

       default-lazy-init="true"
>
    <import resource="SonyContext.xml"/>
    <import resource="ToshibaContext.xml"/>
    <import resource="DatabaseContext.xml"/>

    <bean name="ActionReplacer" class="ru.testspring.impl.robot.ActionReplacer"/>

    <bean id="t1000" class="ru.testspring.impl.robot.ModelT1000"
          parent="BaseModel" scope="prototype">
        <constructor-arg value="red" index="3" type="String"/>
        <constructor-arg value="2006" index="4" type="int"/>
        <constructor-arg value="true" index="5" type="boolean"/>


    </bean>

    <bean name="t1000Pool" class="ru.testspring.impl.pool.T1000Pool">
        <constructor-arg name="robotCollection">
            <map>
                <entry key="2005" value-ref="t1000"/>
                <entry key="2006" value-ref="t1000"/>
                <entry key="2007">
                    <bean class="ru.testspring.impl.robot.ModelT1000" parent="BaseModel">
                        <constructor-arg value="blue" index="3" type="java.lang.String"/>
                        <constructor-arg value="2012" index="4" type="int"/>
                        <constructor-arg value="true" index="5" type="boolean"/>
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>


    <bean id="t1000Empty" class="ru.testspring.impl.robot.ModelT1000">

        <constructor-arg ref="sonyHead"/>
        <constructor-arg ref="sonyHand"/>
        <constructor-arg ref="sonyLeg"/>
    </bean>

    <bean id="BaseModel">
        <constructor-arg ref="sonyHead" index="0"/>
        <constructor-arg ref="sonyHand" index="1"/>
        <constructor-arg ref="sonyLeg" index="2"/>
    </bean>

</beans>